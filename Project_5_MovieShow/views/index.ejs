<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Remix Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.css"
        integrity="sha512-kJlvECunwXftkPwyvHbclArO8wszgBGisiLeuDFwNM8ws+wKIw0sv1os3ClWZOcrEB2eRXULYUsm8OVRGJKwGA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Swiper Slider -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

</head>

<body>
    <%- include("header")%>

        <!-- Add Movie Form -->
        <div class="add_movie_form">
            <form action="/addData" enctype="multipart/form-data" method="post">
                <div class="cross_btn">
                    <button type="button" class="close_form"><i class="fa-solid fa-xmark"></i></button>
                </div>

                <div class="form_flex" style="margin-top: -10px;">
                    <div class="form_left">
                        <h3>Movie Name</h3>
                        <input required type="text" name="name" placeholder="Enter Movie Name...">
                    </div>
                    <div class="form_right">
                        <h3>Movie Image</h3>
                        <input required type="file" name="img" class="file_input">
                    </div>
                </div>

                <div class="form_flex">
                    <div class="form_left">
                        <h3>Movie</h3>
                        <input required type="text" name="movie" placeholder="Enter Movie Link...">
                    </div>
                    <div class="form_right">
                        <h3>Movie Poster</h3>
                        <input required type="text" name="poster" placeholder="Enter Poster URL...">
                    </div>
                </div>

                <div class="form_flex">
                    <div class="form_left">
                        <h3>Released Date</h3>
                        <input required type="date" name="date">
                    </div>
                    <div class="form_right">
                        <h3>Movie Category</h3>
                        <select required name="category" id="">
                            <option value="">Select Appropriate Option</option>
                            <option value="Action/Thriller">Action/Thriller</option>
                            <option value="Adventure/Animation/Drama">Adventure/Animation/Drama</option>
                            <option value="Comedy/Drama">Comedy/Drama</option>
                            <option value="Adventure/Animation/Family">Adventure/Animation/Family</option>
                            <option value="Drama/Musical/Romantic">Drama/Musical/Romantic</option>
                        </select>
                    </div>
                </div>

                <div class="form_flex">
                    <div class="form_left diff_left">
                        <div class="left">
                            <h3>Movie Time Limit</h3>
                            <input required type="text" name="time" placeholder="HH:MM:SS">
                        </div>
                        <div class="right">
                            <h3>Movie Vote</h3>
                            <input required type="text" name="vote" placeholder="Enter Vote...">
                        </div>
                    </div>
                    <div class="form_right">
                        <h3>Movie Rating</h3>
                        <div class="star-rating">
                            <i class="fa-regular fa-star star" data-value="0"></i>
                            <i class="fa-regular fa-star star" data-value="1"></i>
                            <i class="fa-regular fa-star star" data-value="2"></i>
                            <i class="fa-regular fa-star star" data-value="3"></i>
                            <i class="fa-regular fa-star star" data-value="4"></i>
                            <i class="fa-regular fa-star star" data-value="5"></i>
                            <i class="fa-regular fa-star star" data-value="6"></i>
                            <i class="fa-regular fa-star star" data-value="7"></i>
                            <i class="fa-regular fa-star star" data-value="8"></i>
                            <i class="fa-regular fa-star star" data-value="9"></i>
                        </div>
                        <input type="hidden" name="rate" id="rating" value="0">
                    </div>
                </div>

                <div class="form_flex">
                    <div class="language_options">
                        <h3>Select Movie Language</h3>
                        <label>
                            <input type="checkbox" name="language" value="English">
                            English
                        </label>
                        <label>
                            <input type="checkbox" name="language" value="Hindi">
                            Hindi
                        </label>
                        <label>
                            <input type="checkbox" name="language" value="Spanish">
                            Spanish
                        </label>
                        <label>
                            <input type="checkbox" name="language" value="French">
                            French
                        </label>
                        <label>
                            <input type="checkbox" name="language" value="Other">
                            Other
                        </label>
                    </div>
                </div>

                <button type="submit" class="add_submit">Add Movie</button>
            </form>
        </div>

        <!-- Show Movie -->

        <center>
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <img src="img/slide_1.jpg" alt="">
                    </div>
                    <div class="swiper-slide">
                        <img src="img/slide_2.jpg" alt="">
                    </div>
                </div>
            </div>
            

            <div class="movie_div">
                <h1>Recommended Movies</h1>

                <div class="movie_show">
                    <% data.map((e, i)=> { %>
                        <a href="" class="main_a">
                            <div class="movie_main">
                                <div class="movie_img position-relative">
                                    <div class="edit_delete_div position-absolute top-0 start-100 translate-middle">
                                        <a href="/editData?id=<%=e.id%>">
                                            <button class="edit_btn"><i class="fa-solid fa-pen-to-square"></i></button>
                                        </a>
                                        <a href="/deleteData?id=<%=e.id%>">
                                            <button class="delete_btn"><i class="fa-regular fa-trash-can"></i></button>
                                        </a>
                                    </div>
                                    <a href="/posterData?id=<%=e.id%>">
                                        <img src="<%=e.img%>" alt="">
                                    </a>
                                    <button class="rate_vote_btn position-absolute top-100 start-50 translate-middle">
                                        <span><i class="fa-solid fa-star"></i>&nbsp;<%=e.rate%>/10</span>
                                        <span>
                                            <%=e.vote%>K Votes
                                        </span>
                                    </button>
                                </div>
                                <a href="/posterData?id=<%=e.id%>">
                                    <div class="movie_text">
                                        <h3>
                                            <%=e.name%>
                                        </h3>
                                        <p>
                                            <%=e.category%>
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </a>
                        <% }) %>
                </div>
            </div>
        </center>

        <script src="script.js"></script>
</body>

</html>